import physics;
import geometry;

module main{
    function int addTwoNumbers(int a, int b){
        return a + b;
    };
    export addTwoNumbers;
    entrypoint<tick> function void tick(){
        execute<at @p> particle(minecraft:end_rod,~ ~ ~, 0 0 0, 1i, 100i, #force);
    };
    entrypoint<load> function void main(){
        tellraw(@a,"Hello world!");
        execute<at @p> summon(minecraft:sheep, ~ ~ ~);
        tellraw(@a,"Mojang has given you a sheep for your troubles.");

        tellraw(@a,addTwoNumbers(14i, 12i))

        execute<at @p anchored eyes>{
            dec coordinate curposition;
            dec float i;
            set curposition = ~ ~ ~1;
            set i = 0f;
            loop(block curposition){
                set curposition = (~ ~ ~1) + (^ ^ ^(i));
            };
            setblock(curposition,minecraft:stone);
        };
    };
};